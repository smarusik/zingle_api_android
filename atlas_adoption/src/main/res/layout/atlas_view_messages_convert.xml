<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <!--Spacer top -->
    <View
        android:id="@+id/atlas_view_messages_convert_spacer_top"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        />
    
    <TextView 
        android:id="@+id/atlas_view_messages_convert_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="2dp"
        android:textSize="@dimen/atlas_text_size_smaller2"
        android:textColor="@color/atlas_text_gray"
        android:text="Tomaz Stolfa"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"    
        
        android:orientation="horizontal"
        >
        
        <!-- avatar placeholder -->
        <FrameLayout 
            android:id="@+id/atlas_view_messages_convert_avatar_container"
            android:layout_width="24dp" 
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="bottom"
            >
            
            <ImageView 
                android:id="@+id/atlas_view_messages_convert_avatar_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                />        
            
            <TextView 
                android:id="@+id/atlas_view_messages_convert_initials"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/atlas_text_size_smaller2"
                android:text="TS" 
                android:gravity="center" />
            
        </FrameLayout>
    	
        <!--  android:background="#D1FFF1" - blue -->
    
        <LinearLayout
            android:id="@+id/atlas_view_messages_cell_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:orientation="vertical" />
            
        <View 
            android:id="@+id/atlas_view_messages_convert_spacer_right"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            />
    
    </LinearLayout>
    
    <TextView 
        android:id="@+id/atlas_view_messages_convert_delivery_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_gravity="right"
        android:textColor="@color/atlas_text_gray"
        android:textSize="@dimen/atlas_text_size_smaller2"
        android:text="Read at 10:12 AM"
        />
    
    <View 
        android:id="@+id/atlas_view_messages_convert_spacer_bottom"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        />
    
</LinearLayout>